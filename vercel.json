{
  "version": 2,
  "functions": {
    "api/run-scraper.py": {
      "runtime": "python3.9",
      "maxDuration": 60
    },
    "api/health.py": {
      "runtime": "python3.9"
    }
  },
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "PYTHONPATH": "/var/task"
  }
} 